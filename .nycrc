{
  "all": true,
  "check-coverage": true,
  "extension": [
    ".ts"
  ],
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "app/locale/**",
    "app/log/**",
    "app/views/**",
    "app/tests/**",
    "app/core/config/**",
    "app/core/logger/**",
    "app/core/types/**",
    "public/**"
  ],
  "excludeNodeModules": true,
  "reporter": [
    "html", "lcov"
  ],
  "branches": [80, 90],
  "lines": [80, 90],
  "functions": [80, 90],
  "statements": [80, 90]
}
